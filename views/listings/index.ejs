        <label class="form-check-label" for="flexSwitchCheckDefault">Display before taxes</label>
    </div>
</div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mb-3 mt-1"> 
        <% for(let listing of allListings){ %>
            <div class="col">
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card h-100 listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b>
                                <br>
                                Price : &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                                <i class="after-tax"> &nbsp; +18% taxes</i>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
