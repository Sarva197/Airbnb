</body>

<script>
const hotelList = document.querySelector('.hotel-list');
const rightBtn = document.getElementById('right-btn');
const leftBtn = document.getElementById('left-btn');
const displayBeforeTaxes = document.getElementById('flexSwitchCheckDefault');
const afterTax = document.querySelectorAll('.after-tax');

rightBtn.addEventListener('click', () => {
    hotelList.scrollBy({ left: 300, behavior: 'smooth' });
});

leftBtn.addEventListener('click', () => {
    hotelList.scrollBy({ left: -300, behavior: 'smooth' });
});

displayBeforeTaxes.addEventListener("click", ()=>{
    for(tax of afterTax){
        tax.style.display = displayBeforeTaxes.checked ? 'block' : 'none';
    }
})

</script>
