<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        /* display: flex;
        margin-top : 1rem;
        justify-content: space-between; */
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    overflow: hidden;
    width: 70%;
    }

    .features{
        width: 100%;
        height: fit-content;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .filter{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        margin-right: 1rem;
        cursor: pointer;
        opacity: 0.7;
        height: 3rem;
        width: fit-content;
        padding: 10px;
        font-size: small;
    }

    .filter:hover{
        opacity: 1;
        border-bottom: 2px solid black;
    }

    button {
    height: fit-content;
    width: fit-content;
    cursor: pointer;
    border: none;
    background: white;
    padding: 10px;
    border-radius: 50px;
    border: 2px solid black;
    opacity: 0.6;
    font-size: small;
}

button:hover{
    opacity: 1;
}

.hotel-list {
    display: flex;
    overflow-x: hidden;
    scroll-behavior: smooth;
    white-space: nowrap;
    width: 100%; 
    padding: 10px;
}

.hotel-list::-webkit-scrollbar {
    display: none;
}

.after-tax{
    display: none;
}

.toggle-tax{
  height: 2.8rem;
  width: 14rem;
  border: 1px solid black;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: row-reverse;
  padding: 1rem;
  margin-top: 3px;
  border-radius: 1rem;
  opacity: 0.7;
}


</style>
<body>
